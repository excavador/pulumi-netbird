{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "git@latest",
    "go@latest",
    "golangci-lint@latest",
    "gopls@latest",
    "jq@latest",
    "just@latest",
    "pulumi@latest",
    "pulumiPackages.pulumi-go@latest"
  ],
  "env": {
    "CGO_ENABLED": "0",
    "GOFLAGS": "-tags=git,netgo",
    "GOPRIVATE": "github.com/excavador/*",
    "GOPROXY": "https://proxy.golang.org,direct",
    "PATH": "$DEVBOX_PROJECT_ROOT/bin:$PATH"
  },
  "shell": {
    "init_hook": [
      "export CGO_ENABLED",
      "export GOFLAGS",
      "export GOPRIVATE",
      "mkdir -p bin"
    ]
  }
}
